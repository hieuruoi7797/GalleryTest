<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/layout_margin_10dp"
        android:background="@drawable/drawable_photofolder"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/image_item"
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_height"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_name_folder"
            android:textStyle="bold"
            android:textColor="@color/color_black"
            android:layout_marginLeft="@dimen/layout_margin_10dp"
            android:textSize="@dimen/textview_size_15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_number_image"
            android:textColor="@color/color_light_gray"
            android:layout_marginBottom="@dimen/layout_margin_10dp"
            android:layout_marginLeft="@dimen/layout_margin_10dp"
            android:textSize="@dimen/textview_size_15dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/relative_select"
        android:alpha="0.5"
        android:layout_height="match_parent">
    </RelativeLayout>

</RelativeLayout>
